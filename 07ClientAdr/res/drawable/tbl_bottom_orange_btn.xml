<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/tbl_orange" />

            <corners android:bottomLeftRadius="@dimen/tbl_small"
                android:bottomRightRadius="@dimen/tbl_small" />
        </shape>
	</item>
	
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/tbl_orange_dark" />

            <corners android:bottomLeftRadius="@dimen/tbl_small"
                android:bottomRightRadius="@dimen/tbl_small" />
        </shape>
	</item>

</selector>